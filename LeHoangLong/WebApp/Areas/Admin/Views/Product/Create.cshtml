@model ModelEF.Model.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{ <i class="fa fa-save"></i>&nbsp;Thêm sản phẩm
}

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", onsubmit = "AJAXSubmit(this);return false;" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Product</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <lable class="control-label col-md-2">Tên Sản Phẩm</lable>
    <div class="col-md-10">
        @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <lable class="control-label col-md-2">Đơn Giá</lable>
    <div class="col-md-10">
        @Html.EditorFor(model => model.UnitCost, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <lable class="control-label col-md-2">Số Lượng</lable>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <lable class="control-label col-md-2">Trạng Thái</lable>
    <div class="col-md-10">
        @Html.EditorFor(model => model.ProductStatus,  new { @class = "form-control"  })
        @Html.ValidationMessageFor(model => model.ProductStatus, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <lable class="control-label col-md-2">Hình Ảnh</lable>
    <div class="col-md-10">
        <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
        @Html.ValidationMessageFor(model => model.ProductImg, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <lable class="control-label col-md-2">Chi Tiết</lable>
    <div class="col-md-10">
        @Html.EditorFor(model => model.ProductDes, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ProductDes, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <lable class="control-label col-md-2">Loại Sản Phẩm</lable>
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.CategoryID,(IEnumerable<SelectListItem>)ViewBag.CategoryID, "---Chọn loại Sản Phẩm---", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
    </div>
</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div class="col-md-6">
    @Html.ActionLink("Quay Lại", "Index", "Product", new { @class = "btn btn-primary" })
</div>
